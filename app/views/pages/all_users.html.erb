<h1>All registred users:</h1>

<table>
  <thead>
    <tr>
      <th>User</th>
      <th colspan="1"></th>
    </tr>
  </thead>

  <tbody>
    <% User.all.each do |u| %>
      <tr>
        <td>
          <%= u.username %>
        </td>
        <% if policy(u).destroy? %>
          <td>
            <%= link_to 'Destroy', u, method: :delete, data: { confirm: 'Are you sure?' } %>
          </td>
        <% end %>
      </tr>
    <% end %>
  </tbody>

</table>
